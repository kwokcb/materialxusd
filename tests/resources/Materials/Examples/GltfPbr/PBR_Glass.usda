#usda 1.0
(
    customLayerData = {
        string colorSpace = "lin_rec709"
    }
    defaultPrim = "TestScene"
    doc = "Combined content from: D:\\Work\\materialx\\materialxusd\\tests\\resources\\Materials\\Examples\\GltfPbr\\gltf_pbr_glass_converted.mtlx, D:\\Work\\materialx\\materialxusd\\tests\\data\\sphere.usd, D:\\Work\\materialx\\materialxusd\\tests\\data\\san_giuseppe_bridge.hdr."
    metersPerUnit = 1
    upAxis = "Y"
)

def "MaterialX"
{
    def "Materials"
    {
        def Material "PBR_Glass" (
            prepend apiSchemas = ["MaterialXConfigAPI"]
        )
        {
            string config:mtlx:version = "1.39"
            float inputs:alpha
            float inputs:alpha_cutoff
            int inputs:alpha_mode
            color3f inputs:attenuation_color
            float inputs:attenuation_distance
            color3f inputs:base_color
            float inputs:clearcoat
            float3 inputs:clearcoat_normal
            float inputs:clearcoat_roughness
            color3f inputs:emissive
            float inputs:emissive_strength
            float inputs:ior = 1.52
            float inputs:iridescence
            float inputs:iridescence_ior
            float inputs:iridescence_thickness
            float inputs:metallic = 0
            float3 inputs:normal
            float inputs:occlusion
            float inputs:roughness = 0.01
            color3f inputs:sheen_color
            float inputs:sheen_roughness
            float inputs:specular
            color3f inputs:specular_color
            float3 inputs:tangent
            float inputs:thickness
            float inputs:transmission = 1
            token outputs:mtlx:surface.connect = </MaterialX/Materials/PBR_Glass/SR_glass.outputs:surface>

            def Shader "SR_glass" (
                prepend references = </MaterialX/Shaders/SR_glass>
            )
            {
                float inputs:alpha.connect = </MaterialX/Materials/PBR_Glass.inputs:alpha>
                float inputs:alpha_cutoff.connect = </MaterialX/Materials/PBR_Glass.inputs:alpha_cutoff>
                int inputs:alpha_mode.connect = </MaterialX/Materials/PBR_Glass.inputs:alpha_mode>
                color3f inputs:attenuation_color.connect = </MaterialX/Materials/PBR_Glass.inputs:attenuation_color>
                float inputs:attenuation_distance.connect = </MaterialX/Materials/PBR_Glass.inputs:attenuation_distance>
                color3f inputs:base_color.connect = </MaterialX/Materials/PBR_Glass.inputs:base_color>
                float inputs:clearcoat.connect = </MaterialX/Materials/PBR_Glass.inputs:clearcoat>
                float3 inputs:clearcoat_normal.connect = </MaterialX/Materials/PBR_Glass/root_graph.outputs:out2>
                float inputs:clearcoat_roughness.connect = </MaterialX/Materials/PBR_Glass.inputs:clearcoat_roughness>
                color3f inputs:emissive.connect = </MaterialX/Materials/PBR_Glass.inputs:emissive>
                float inputs:emissive_strength.connect = </MaterialX/Materials/PBR_Glass.inputs:emissive_strength>
                float inputs:ior.connect = </MaterialX/Materials/PBR_Glass.inputs:ior>
                float inputs:iridescence.connect = </MaterialX/Materials/PBR_Glass.inputs:iridescence>
                float inputs:iridescence_ior.connect = </MaterialX/Materials/PBR_Glass.inputs:iridescence_ior>
                float inputs:iridescence_thickness.connect = </MaterialX/Materials/PBR_Glass.inputs:iridescence_thickness>
                float inputs:metallic.connect = </MaterialX/Materials/PBR_Glass.inputs:metallic>
                float3 inputs:normal.connect = </MaterialX/Materials/PBR_Glass/root_graph.outputs:out>
                float inputs:occlusion.connect = </MaterialX/Materials/PBR_Glass.inputs:occlusion>
                float inputs:roughness.connect = </MaterialX/Materials/PBR_Glass.inputs:roughness>
                color3f inputs:sheen_color.connect = </MaterialX/Materials/PBR_Glass.inputs:sheen_color>
                float inputs:sheen_roughness.connect = </MaterialX/Materials/PBR_Glass.inputs:sheen_roughness>
                float inputs:specular.connect = </MaterialX/Materials/PBR_Glass.inputs:specular>
                color3f inputs:specular_color.connect = </MaterialX/Materials/PBR_Glass.inputs:specular_color>
                float3 inputs:tangent.connect = </MaterialX/Materials/PBR_Glass/root_graph.outputs:out3>
                float inputs:thickness.connect = </MaterialX/Materials/PBR_Glass.inputs:thickness>
                float inputs:transmission.connect = </MaterialX/Materials/PBR_Glass.inputs:transmission>
            }

            def "root_graph" (
                prepend references = </MaterialX/NodeGraphs/root_graph>
            )
            {
            }
        }
    }

    def "Shaders"
    {
        def Shader "SR_glass"
        {
            uniform token info:id = "ND_gltf_pbr_surfaceshader"
            token outputs:surface
        }
    }

    def "NodeGraphs"
    {
        def NodeGraph "root_graph"
        {
            float3 outputs:out.connect = </MaterialX/NodeGraphs/root_graph/Nworld.outputs:out>
            float3 outputs:out2.connect = </MaterialX/NodeGraphs/root_graph/Nworld.outputs:out>
            float3 outputs:out3.connect = </MaterialX/NodeGraphs/root_graph/Tworld.outputs:out>

            def Shader "Nworld"
            {
                uniform token info:id = "ND_normal_vector3"
                string inputs:space = "world"
                float3 outputs:out
            }

            def Shader "Tworld"
            {
                uniform token info:id = "ND_tangent_vector3"
                int inputs:index = 0
                string inputs:space = "world"
                float3 outputs:out
            }
        }
    }
}

