    }
    defaultPrim = "TestScene"
    doc = "Combined content from: ./resources/Materials/TestSuite/pbrlib/surfaceshader\\lama\\lama_iridescence_converted.mtlx, D:\\work\\materialx\\materialxusd\\tests\\data\\sphere.usd, D:\\work\\materialx\\materialxusd\\tests\\data\\san_giuseppe_bridge.hdr."
    metersPerUnit = 1
    upAxis = "Y"
)

def "MaterialX"
{
    def "Materials"
    {
        def Material "LamaIridescenceTest" (
            prepend apiSchemas = ["MaterialXConfigAPI"]
        )
        {
            string config:mtlx:version = "1.39"
            token inputs:bsdf (
                renderType = "BSDF"
            )
            token inputs:edf (
                renderType = "EDF"
            )
            float inputs:opacity
            bool inputs:thin_walled
            token outputs:mtlx:surface.connect = </MaterialX/Materials/LamaIridescenceTest/LamaIridescenceSurface.outputs:surface>

            def Shader "LamaIridescenceSurface" (
                prepend references = </MaterialX/Shaders/LamaIridescenceSurface>
            )
            {
                token inputs:bsdf (
                    renderType = "BSDF"
                )
                token inputs:bsdf.connect = </MaterialX/Materials/LamaIridescenceTest/top_level_nodes.outputs:out>
                token inputs:edf (
                    renderType = "EDF"
                )
                token inputs:edf.connect = </MaterialX/Materials/LamaIridescenceTest.inputs:edf>
                float inputs:opacity.connect = </MaterialX/Materials/LamaIridescenceTest.inputs:opacity>
                bool inputs:thin_walled.connect = </MaterialX/Materials/LamaIridescenceTest.inputs:thin_walled>
            }

            def "top_level_nodes" (
                prepend references = </MaterialX/NodeGraphs/top_level_nodes>
            )
            {
            }
        }
    }

    def "Shaders"
    {
        def Shader "LamaIridescenceSurface"
        {
            uniform token info:id = "ND_surface"
            token outputs:surface
        }
    }

    def "NodeGraphs"
    {
        def NodeGraph "top_level_nodes"
        {
            token outputs:out (
                renderType = "BSDF"
            )
            token outputs:out.connect = </MaterialX/NodeGraphs/top_level_nodes/LamaIridescence.outputs:out>

            def Shader "LamaIridescence"
            {
                uniform token info:id = "ND_lama_iridescence"
                float inputs:anisotropy = 0
                float inputs:anisotropyRotation = 0
                float inputs:filmIOR = 1.3
                float inputs:maxFilmThickness = 800
                float inputs:minFilmThickness = 400
                float inputs:relativeFilmThickness = 0.5
                float inputs:roughness = 0
                token outputs:out (
                    renderType = "BSDF"
                )
            }
        }
    }
}

